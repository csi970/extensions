{
    "manifest_version": 2,

    "name": "Music Difficulty",
    "description": "This extension displays difficulty/extended statistics for a MusicXML file.",
    "version": "0.0.1",

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "page_action": {
        "default_icon": {
            "19": "icon-19.png",
            "38": "icon-38.png"
        },
        "default_popup": "popup.html",
        "default_title": "Music Difficulty"
    },

    "permissions" : [
        "declarativeContent",
        "tabs",
        "https://music-api.herokuapps.com/"
    ]
}
