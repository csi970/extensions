{
    "manifest_version": 2,

    "name": "Music Difficulty",
    "description": "This extension displays difficulty/extended statistics for a MusicXML file.",
    "version": "0.0.1",

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "page_action": {
        "default_popup": "popup.html",
        "default_title": "Music Difficulty"
    },

    "permissions" : [
        "declarativeContent"
    ]
}
